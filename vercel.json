{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "redirects": [
    {
      "source": "/AI_WRITING_PROMPT_FOR_CONTRIBUTORS.md",
      "destination": "/bookclub/prompt",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/thelostarchives/:slug",
      "destination": "/thelostarchives/:slug.html"
    },
    {
      "source": "/:path((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/tiktok-downloader/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ]
}
